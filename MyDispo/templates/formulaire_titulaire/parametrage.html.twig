{% extends 'base.html.twig' %}

{% block title %}Paramètres du formulaire titulaire{% endblock %}

{% block body %}
  <div class="card">
    <div class="card-header">

      <h5>Paramétrage du formulaire pour les titulaires</h5>
      <br />
      {{ form_start(form) }}

      <ul class="nav nav-tabs">
        <li class="nav-item" role="presentation">
          <a class="nav-link active" id="echelle-tab" data-toggle="tab" href="#echelle" role="tab" aria-controls="echelle" aria-selected="true">Echelle du calendrier</a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="nav-link " id="heures-tab" data-toggle="tab" href="#heures" role="tab" aria-controls="heures" aria-selected="false">Heures de début et de fin du calendrier</a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="nav-link" id="contraintesperso-tab" data-toggle="tab" href="#contraintesperso" role="tab" aria-controls="contraintesperso" aria-selected="false">Préférences personnelles</a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="nav-link" id="contraintespro-tab" data-toggle="tab" href="#contraintespro" role="tab" aria-controls="contraintespro" aria-selected="false">Contraintes professionnelles</a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="nav-link" id="explications-tab" data-toggle="tab" href="#explications" role="tab" aria-controls="explications" aria-selected="false">Paragraphes explicatifs</a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="nav-link" id="remarques-tab" data-toggle="tab" href="#remarques" role="tab" aria-controls="remarques" aria-selected="false">Remarques éventuelles</a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="nav-link" id="etat-tab" data-toggle="tab" href="#etat" role="tab" aria-controls="etat" aria-selected="false">Ouverture/Fermeture formulaire</a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="nav-link" id="titres-tab" data-toggle="tab" href="#titres" role="tab" aria-controls="titres" aria-selected="false">Titres contraintes personnelles</a>
        </li>
      </ul>
    </div>
    <div class="card-body">
      <div class="tab-content">
        <div id="echelle" class="tab-pane fade show active" role="tabpanel" aria-labelledby="echelle-tab">
          {{ form_row (form.echelleCalendrier) }}
        </div>
        <div id="heures" class="tab-pane fade" role="tabpanel" aria-labelledby="heures-tab">
          {{ form_row (form.heureDebutCalendrier) }}
          {{ form_row (form.heureFinCalendrier) }}

        </div>
        <div id="contraintesperso" class="tab-pane fade" role="tabpanel" aria-labelledby="contraintesperso-tab">
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Durée en minutes (0 = pas de durée limite)</th>
      <th scope="col">Nombre de créneaux autorisé pour la saisie</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">Préférence personnelle forte</th>
      <td>{{ form_widget (form.dureePersForte) }}</td>
      <td>{{ form_widget (form.quantitePersForte) }}</td>
    </tr>
    <tr>
      <th scope="row">Préférence personnelle moyenne</th>
      <td>{{ form_widget (form.dureePersMoy) }}</td>
      <td>{{ form_widget (form.quantitePersMoy) }}</td>
    </tr>
    <tr>
      <th scope="row">Préférence personnelle faible</th>
      <td>{{ form_widget (form.dureePersFaible) }}</td>
      <td>{{ form_widget (form.quantitePersFaible) }}</td>
    </tr>
  </tbody>
</table>
        </div>

        <div id="contraintespro" class="tab-pane fade" role="tabpanel" aria-labelledby="contraintespro-tab">


          <table class="table table-bordered">
            <thead class="thead">
              <tr>
                <th scope="col"></th>
                <th scope="col">Durée en minutes (0 = pas de durée limite)</th>
                <th scope="col">Nombre de créneaux autorisé</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">Contrainte professionnelle forte</th>
                <td>{{ form_widget (form.dureeProForte) }}</td>
                <td>{{ form_widget (form.quantiteProForte) }}</td>
              </tr>
              <tr>
                <th scope="row">Contrainte professionnelle moyenne</th>
                <td>{{ form_widget (form.dureeProMoy) }}</td>
                <td>{{ form_widget (form.quantiteProMoy) }}</td>
              </tr>
              <tr>
                <th scope="row">Contrainte professionnelle faible</th>
                <td>{{ form_widget (form.dureeProFaible) }}</td>
                <td>{{ form_widget (form.quantiteProFaible) }}</td>
              </tr>
            </tbody>
          </table>
        </div>
        <div id="explications" class="tab-pane fade" role="tabpanel" aria-labelledby="explications-tab">
          {{ form_row (form.texteHebdomadaire) }}
          {{ form_row (form.textePonctuel) }}
          {{ form_row (form.anneeUniversitaire) }}
        </div>
        <div id="remarques" class="tab-pane fade" role="tabpanel" aria-labelledby="remarques-tab">
          {{ form_row (form.remarquesHebdoActives) }}
          {{ form_row (form.remarquesPonctuelActives) }}
        </div>
        <div id="etat" class="tab-pane fade" role="tabpanel" aria-labelledby="etat-tab">
          {{ form_row (form.estOuvert) }}
        </div>
        <div id="titres" class="tab-pane fade" role="tabpanel" aria-labelledby="titres-tab">
          {{ form_row (form.autoriserTitreVideContraintePerso) }}
        </div>
      </div>
    </div>
    <div class="card-footer">
      <center>
        <button class="btn btn-primary" id="submit">{{ button_label|default('Enregistrer toutes les modifications') }}</button>
        <button class="btn btn-primary"><a href="{{lien}}"  style="color: white;"> Voir aperçu du formulaire</a></button>
      </center>
    </div>
  </div>

  {{ form_end(form) }}
</div>
{% endblock %}
